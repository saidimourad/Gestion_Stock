{% extends 'base.html.twig' %}
{% block title %} Ajouter Utilisateur{% endblock %}
{% block body %}
    <div class="row">
    <div class="col-lg-12">
    <div class="panel panel-default">
    <div class="panel-heading">Utilisateur</div>
    <div class="panel-body">
    <div class="form-group">
        {{ form_start(form, {'class' : 'form-group'}) }}
        {{ form_row(form.nom, {'label' : 'Nom:', 'attr' : {'class' : 'form-control'}}) }}
        {{ form_row(form.prenom, {'label' : 'Prenom:', 'attr' : {'class' : 'form-control'}}) }}
        {{ form_row(form.cin, {'label' : 'Cin:', 'attr' : {'class' : 'form-control'}}) }}
        {{ form_row(form.date_naissance, {'label' : 'Date Naissance:', 'attr' : {'class' : 'form-control'}}) }}
        {{ form_row(form.fonction, {'label' : 'Fonction:', 'attr' : {'class' : 'form-control'}}) }}
                {{ form_row(form.tel, {'label' : 'Tel:', 'attr' : {'class' : 'form-control'}}) }}
        {{ form_row(form.email, {'label' : 'Email:', 'attr' : {'class' : 'form-control'}}) }}
        {{ form_row(form.login, {'label' : 'login:', 'attr' : {'class' : 'form-control'}}) }}

        {{ form_row(form.password, {'label' : 'Mot de passe:', 'attr' : {'class' : 'form-control'}}) }}
        {{ form_row(form.actif, {'label' : 'Actif:', 'attr' : {'class' : 'form-control'}}) }}





        <button type="submit" class="btn btn-primary">Enregistrer</button>
    {{ form_end(form) }}

    </div>

    </div>
    </div>
    </div>
    </div><!--/.row-->


    </div>
{% endblock %}