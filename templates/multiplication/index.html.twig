{% extends 'base.html.twig' %}
{% block title %}Hello {{ controller_name }}!{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-1"></div>
        <div class="col-6">
            <table class="table table-striped table-sm text-center">
                <thead style="background-color: #5eb5e0">
                <tr>
                    <th>&times;</th>
                    {% for i in 0..9 %}
                        <th><a href="{{ path('tabmult', {'val': i,}) }}"> {{ i }}</a></th>
                    {% endfor %}
                </tr>
                </thead>
                <tbody>
                {% for i in 0..9 %}
                    <tr>
                        <td class="font-weight-bold" style="background-color: #5eb5e0">{{ i }}</td>
                        {% for j in 0..9 %}
                            {% if i*j % 2 %}
                                <td style="background-color: #f5c6cb">
                            {% else %}
                                <td>
                            {% endif %}
                            {{ i * j }}</td>
                        {% endfor %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {% if val > 0 %}
            <div class="col-1"><div>&nbsp;</div> </div>
            <div class="col-1">
                <table class="table table-striped table-sm text-center">
                    <thead>
                    <tr style="background-color: aquamarine"><th>{{ val }}</th></tr>
                    </thead>
                    <tbody>
                    {% for x in 0..9 %}
                        <tr><td>{{ x * val }}</td></tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
{% endblock %}