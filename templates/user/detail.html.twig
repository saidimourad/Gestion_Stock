{% extends 'base.html.twig' %}

{% block title %}
    Mise à jour Compte
{% endblock %}
{% block body %}

<div class="row">
    <div class="col-lg-12">

        <div class="card border card-outline">
            <div class="card-header border  bglightblue">
                <h3 class="card-title">
                    <i class="fas fa-list"></i>
                    Profile </h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-widget="maximize"><i class="fas fa-expand"></i>
                    </button>
                </div>
            </div>

            <div class="card-body ">


                <div class="container">
                    <div class="row m-y-2">
                        <div class="col-lg-8 push-lg-4">
                            <ul class="nav nav-tabs">
                                <li class="nav-item">
                                    <a href="" data-target="#edit" data-toggle="tab" class="nav-link ">Modifier </a>
                                </li>
                                <li class="nav-item">
                                    <a href="" data-target="#profile" data-toggle="tab" class="nav-link active ">Profile</a>
                                </li>


                            </ul>
                            <div class="tab-content p-b-3">
                                <div class="tab-pane active" id="profile">
                                    <br/>
                                    <h3 class="m-y-2">Profile</h3>
                                    <div class="row">
                                        <div class="col-md-6">

                                        </div>
                                        <div class="col-md-6">


                                        </div>

                                        <div class="col-md-12">


                                            <div class="row">


                                                <div class="col-md-3">
                                                    <label>Email:</label>
                                                </div>
                                                <div class="col-md-3">
                                                    <p>{{ user.email }}</p>
                                                </div>
                                            </div>
                                            {% if user.nom %}

                                                <div class="row">
                                                    <div class="col-md-3">
                                                        <label>Nom:</label>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <p>{{ user.nom }}</p>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-3">
                                                        <label>Prénom:</label>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <p>{{ user.prenom }}m</p>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-3">
                                                        <label>CIN:</label>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <p>{{ app.user.cin }}</p>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-3">
                                                        <label>Date de naissance:</label>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <p>{{ user.datenassance|date("d/m/Y") }}</p>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-3">
                                                        <label>Sexe:</label>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <p>{{ user.sexe }}</p>
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <div class="col-md-3">
                                                        <label>Date d'embauche:</label>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <p>{{ user.dateembauche|date("d/m/Y") }}</p>
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <div class="col-md-3">
                                                        <label>Etat civil:</label>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <p>{{ user.etatcivil }}</p>
                                                    </div>
                                                </div>
                                            {% endif %}

                                            <div class="row">
                                                <div class="col-md-3">
                                                    <label>Date de création:</label>
                                                </div>
                                                <div class="col-md-3">
                                                    <p>{{ user.datecreation|date("d/m/Y") }}</p>
                                                </div>
                                            </div>



                                            <div class="row">
                                                <div class="col-md-3">
                                                    <label>Tél:</label>
                                                </div>
                                                <div class="col-md-3">
                                                    <p>{{ user.tel }}</p>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <label>Adresse:</label>
                                                </div>
                                                <div class="col-md-5">
                                                    <p>{{ user.adresse }}</p>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-3">
                                                    <label>Etat de compte:</label>
                                                </div>
                                                <div class="col-md-3">

                                                    {% if user.isActive==0 %}
                                                        <div class="icon">

                                                            <img src="../../img/checkoff.jpg"
                                                                 class="img-size-50 img-circle elevation-1" alt="User Image">
                                                        </div>
                                                    {% endif %}
                                                    {% if user.isActive==1 %}
                                                        <div class="icon">
                                                            <img src="../../img/checkon.jpg"
                                                                 class=" img-size-50 img-circle elevation-1" alt="User Image">

                                                        </div>

                                                    {% endif %}


                                                </div>
                                            </div>


                                        </div>
                                    </div>
                                    <!--/row-->
                                </div>
                                <div class="tab-pane " id="messages">

                                </div>
                                <div class="tab-pane " id="edit">
                                    <br/>
                                    <h3 class="m-y-2">Modifier le compte</h3>


                                    <form class="form-horizontal" id="form" method="POST" novalidate action="{{ path('pwdupAdmUSER') }}" >




                                        <fieldset>
                                            {# <legend>Changer votre mot de passe</legend>#}

                                            {% for message in app.flashes('notice') %}
                                                <div class="alert alert-warning">
                                                    {{ message }}
                                                </div>
                                            {% endfor %}

                                            <div >
                                                {#<div class="row">
                                                    <div class="col-md-4">
                                                        {{ form_row(form.id)}}

                                                        {{ form_row(form.email, {'attr': {'required': 'false' }}) }}

                                                    </div>
                                                </div>

                                                <div class="row">

                                                <div class="col-md-4">
                                                        {{ form_row(form.password, {'attr': {'required': 'false' }}) }}

                                                </div>
                                                </div>
                                                    <div class="row">

                                                    <div class="col-md-4">
                                                        {{ form_row(form.confirm_password, {'attr': {'required': 'false' }}) }}                                                     </div>
                                                    </div>

                                                </div>#}
                                                {#
                                                                                                   {{ form_start(form, {'attr': {'novalidate': 'novalidate','class' : 'form-group form-horizontal', 'id':'form', 'role' : 'form' }}) }}
                                                #}
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            {{ form_row(form.id)}}

                                                            {{ form_row(form.nom, {'attr': {'autocomplete': 'off' }}) }}
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">

                                                        <div class="form-group">
                                                            {{ form_row(form.prenom, {'attr': {'autocomplete': 'off' }}) }}
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">

                                                        <div class="form-group">
                                                            {{ form_row(form.cin, {'attr': {'autocomplete': 'off' }}) }}
                                                        </div>
                                                    </div>


                                                    <div class="col-md-4">

                                                        <div class="form-group">
                                                            {{ form_row(form.datenassance) }}
                                                        </div>
                                                    </div>

                                                    <div class="col-md-4">

                                                        <div class="form-group">
                                                            {{ form_row(form.adresse, {'attr': {'autocomplete': 'off' }}) }}
                                                        </div>
                                                    </div>

                                                    <div class="col-md-4">

                                                        <div class="form-group">
                                                            {{ form_row(form.tel, {'attr': {'autocomplete': 'off' }}) }}
                                                            {#
                                                                                                    {{ form_row(form.tel, {'attr' : {'class' : 'form-control', 'pattern' : '[0-9]{2}[0-9]{3}[0-9]{3}'}}) }}
                                                            #}

                                                        </div>
                                                    </div>


                                                    <div class="col-md-4">

                                                        <div class="form-group">
                                                            {{ form_row(form.sexe) }}
                                                        </div>
                                                    </div>

                                                    <div class="col-md-4">

                                                        <div class="form-group">
                                                            {{ form_row(form.etatcivil) }}
                                                        </div>
                                                    </div>

                                                    <div class="col-md-4">

                                                        <div class="form-group">
                                                            {{ form_row(form.dateembauche) }}
                                                        </div>
                                                    </div>


                                                    <div class="col-md-3">

                                                        <div class="form-group">
                                                            {{ form_row(form.email, {'attr': {'autocomplete': 'off' }}) }}
                                                        </div>
                                                    </div>


                                                    {#
                                                                                    {% if update ==0 %}
                                                    #}



                                                    {#   <div class="col-md-3">

                                                           <div class="form-group">
                                                               {{ form_row(form.password, {'attr': {'required': 'false' }}) }}
                                                           </div>
                                                       </div>


                                                       <div class="col-md-3">

                                                           <div class="form-group">
                                                               {{ form_row(form.confirm_password, {'attr': {'required': 'false' }}) }}
                                                           </div>
                                                       </div>#}

                                                    {#
                                                                                    {% endif %}
                                                    #}


                                                    <div class="col-md-3">

                                                        <div class="form-group">

                                                            {{ form_row(form.roles, {'attr' : {'class' : 'form-control'}}) }}

                                                            {#
                                                                                                    {{ form_row(form.roles) }}
                                                            #}
                                                        </div>
                                                    </div>



                                                    <div class="col-md-2">

                                                        <div class="form-group">
                                                            {{ form_row(form.isActive) }}
                                                        </div>
                                                    </div>
                                                    <div class="col-md-2">
                                                        <button type="submit" name="valider" class="btn lock btn-outline-primary"></span> Mettre à jour</button>
                                                    </div>
                                                </div>



                                                {{ form_rest(form) }}

                                                {{ form_end(form) }}



                                        </fieldset>

                                </div>

                                <div class="col-md-2">

                                    <div class="form-group">
                                        <a href="{{ path('user')}}"  class="btn btn-outline-info  "><i class="fa fa-undo"></i> Annuler</a>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="col-lg-4 pull-lg-8 text-xs-center">



                        </div>
                    </div>
                </div>





            </div>
        </div>
    </div>

    {% endblock %}



