                        },
                        'userupdate[password]': {
                            required: true,
                            minlength: 8,
                            maxlength: 50,
                        },
                        'userupdate[confirm_password]': {
                            required: true,
                            minlength: 8,
                            maxlength: 50,
                            equalTo: "#user_password"
                        },
                        'userupdate[roles][]': {
                            required: true,
                            // minlength: 5,
                            //equalTo: "#password"
                        },

                        /*
                           email: {
