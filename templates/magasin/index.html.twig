                        messages: {
                            'magasin[designation]': {
                                required: "Veuillez renseigner la dÃ©signation de magasin .",
                                minlength: "Champ au moins 3 caractÃ¨res.",
                                maxlength: "Champ  au plus 50 caractÃ¨res.",

                            },


                            'magasin[adresse]': {
                                required: "Veuillez renseigner l\'adresse magasin .",
