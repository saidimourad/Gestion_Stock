{% extends 'base.html.twig' %}

{% block title %}Hello FonctionController!{% endblock %}

{% block body %}
    {% if fonctions %}
        <table id="articles" class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>Fonction</th>

                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for fonction in fonctions %}

                <tr>
                    <td>{{ fonction.Fonction }}</td>



                    <td>
                        <a href="/fonction/edit/{{ fonction.id }}" class="btn btn-light">Modifier</a>
                    </td>
                    <td>
                        <a href="#" class="btn btn-danger delete-article" data-id="{{ fonction.id }}">Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="/fonction/new"  class="btn btn-primary">Ajouter fonction</a>

    {% else %}
        <p>No fonctions to display</p>
    {% endif %}
{% endblock %}

